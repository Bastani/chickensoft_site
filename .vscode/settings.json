{
  "files.exclude": {
    "**/node_modules": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },
  "eslint.validate": [
    "markdown",
    "mdx",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "auto-close-tag.activationOnLanguage": [
    "md",
    "js",
    "jsx",
    "html",
    "htm",
    "ts",
    "tsx",
    "mdx"
  ],
  "markdownlint.config": {
    // Allow a top level heading despite a yaml front matter "title" property.
    "MD025": {
      "front_matter_title": ""
    }
  }
}
